<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/USA"
            android:text="United States"
            android:textColor="#ff054cff"
            android:gravity="center"
            android:layout_weight="1" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Canada"
            android:text="Canada"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Europe"
            android:text="Europe"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Africa"
            android:text="Africa"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Asia"
            android:text="Asia"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/America"
            android:text="Latin America"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Australia"
            android:text="Australia"
            android:textColor="#ff054cff"
            android:layout_weight="1" android:gravity="center" android:onClick="selectedRegion"/>
</LinearLayout>