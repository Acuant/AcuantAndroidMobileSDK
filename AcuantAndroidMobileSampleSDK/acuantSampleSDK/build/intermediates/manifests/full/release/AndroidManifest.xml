<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cssn.samplesdk"
    android:versionCode="73"
    android:versionName="2.8.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="true" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:name="com.acuant.mobilesdk.ManageApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.acuant.mobilesdk.detect.PDF417.CameraPDF417"
            android:label="CameraDetect"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cssn.samplesdk.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cssn.samplesdk.RegionList"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cssn.samplesdk.ShowDataActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.acuant.mobilesdk.detect.CameraCardDetectAuto" >
        </activity>
        <activity android:name="com.acuant.mobilesdk.detect.CameraCardDetectManual" />
    </application>

</manifest>